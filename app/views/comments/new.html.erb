<a href="/users/<%= params[:user_id] %>/posts/<%= params[:post_id] %>" class="p-2 px-4 mt-5 text-center text-white bg-red-500 border md:hover:shadow-2xl md:hover:transition md:hover:scale-105">Return</a>
<section class="mt-10">
  <h2 class="text-3xl font-bold md:text-5xl">New Comment</h2>
  <%= form_with model: @comment, url: user_post_comments_path(@user, @post), class: "grid gap-3 mt-10" do |form| %>
    <fieldset class="grid gap-3">
      <%= form.label "Message", class: "text-xl font-bold md:text-2xl" %>
      <%= form.text_area :text, class: "w-full p-2 text-base resize-none border-gray-200 h-40", placeholder: "Message" %>
    </fieldset>
    <fieldset class="flex justify-end">
      <%= form.submit "Create", class: "p-2 px-4 text-center border md:hover:shadow-2xl md:hover:transition md:hover:scale-105 cursor-pointer bg-green-500 font-bold text-white" %>
    </fieldset>
  <% end %>
</section>