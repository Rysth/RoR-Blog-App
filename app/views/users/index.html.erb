<ul class="p-0 list-none grid gap-5 w-full">
  <% @users.each do |user| %>
    <li>
      <a class="flex flex-col md:flex-row gap-5 md:hover:scale-105 md:transition md:hover:shadow-2xl" href="/users/<%= user.id %>">
        <picture class="w-40 h-40 md:h-40 mx-auto">
          <img src="<%= user.photo %>" alt="" class="w-full h-full object-cover">
        </picture>
        <div class="flex-grow border p-2 md:p-6 text-center md:text-left flex flex-col justify-between">
          <h3 class="text-3xl md:text-5xl font-bold"><%= user.name %></h3>
          <p class="md:text-right text-xs md:text-base">Number of posts: <%= user.posts_counter %></p>
        </div>
      </a>
    </li>
  <% end %>
</ul>