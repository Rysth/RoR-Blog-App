<a href="/users" class="p-2 px-4 mt-5 text-center text-white bg-red-500 border md:hover:shadow-2xl md:hover:transition md:hover:scale-105">Return</a>
<div class="flex flex-col gap-5 mt-10 md:flex-row">
    <picture class="w-40 h-40 mx-auto md:h-40">
      <img src="<%= @user.photo %>" alt="" class="object-cover w-full h-full" id="user-photo">
    </picture>
    <div class="flex flex-col justify-between flex-grow p-2 text-center border md:p-6 md:text-left">
      <h3 class="text-3xl font-bold md:text-5xl"><%=  @user.name %></h3>
      <p class="text-xs md:text-right md:text-base md:mt-auto">Number of posts: <%=  @user.posts_counter %></p>
    </div>
</div>
<div class="p-2 mt-10 border md:p-4">
  <h3 class="text-xl font-bold md:text-2xl">Bio</h3>
  <p class="mt-3 text-sm md:text-base"><%= @user.bio %></p>
</div>
<div class="grid gap-10 mt-10">
  <ul class="grid w-full gap-5 p-0 list-none">
    <% @user.recent_post.each do |post| %>
      <a class="flex flex-col justify-between flex-grow p-2 text-center border md:text-left md:p-4 md:hover:scale-105 md:transition md:hover:shadow-2xl post" href="/users/<%= @user.id %>/posts/<%= post.id %>" id="post-<%= post.title %>">
        <p class="text-xl font-bold md:text-2xl">Post #<%= post.id %></p>
        <p class="mt-3 text-sm md:text-base"><%= post.text %></p>
        <p class="text-xs md:text-right md:text-base ">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
      </a>
    <% end %>
  </ul>
  <div class="flex justify-end">
    <a href="/users/<%= @user.id %>/posts" class="p-2 px-4 text-center text-white bg-blue-600 border md:hover:shadow-2xl md:hover:transition md:hover:scale-105">See all posts</a>
  </div>
</div>
