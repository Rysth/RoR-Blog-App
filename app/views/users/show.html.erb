 <div class="flex flex-col md:flex-row gap-5 ">
    <picture class="w-40 h-40 md:h-40 mx-auto">
      <img src="<%= @user.photo %>" alt="" class="w-full h-full object-cover">
    </picture>
    <div class="flex-grow border p-2 md:p-6 text-center md:text-left flex flex-col justify-between">
      <h3 class="text-3xl md:text-5xl font-bold"><%=  @user.name %></h3>
      <p class="md:text-right text-xs md:text-base  md:mt-auto">Number of posts: <%=  @user.posts_counter %></p>
    </div>
</div>
<div class="border mt-10 p-2 md:p-4">
  <h3 class="text-xl md:text-2xl font-bold">Bio</h3>
  <p class="mt-3 text-sm md:text-base"><%= @user.bio %></p>
</div>
<div class="mt-10 grid gap-10">
  <ul class="p-0 list-none grid gap-5 w-full">
    <% @posts.each do |post| %>
      <li class="flex-grow p-2 text-center md:text-left flex flex-col justify-between border md:p-4">
        <p class="text-xl md:text-2xl font-bold">Post #<%= post.id %></p>
        <p class="mt-3 text-sm md:text-base"><%= post.text %></p>
        <p class="md:text-right text-xs md:text-base ">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
      </li>
    <% end %>
  </ul>
  <div class="flex justify-center">
    <button class="text-center border p-2 md:hover:shadow-2xl md:hover:transition md:hover:scale-105 px-4">See all posts</button>
  </div>
</div>
